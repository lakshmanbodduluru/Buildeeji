<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/hot_projects_card_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="4dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="2dp"
        app:contentPadding="3dp">

        <RelativeLayout
            android:id="@+id/normal_build_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/hot_projects_company_img"
                android:layout_width="130dp"
                android:layout_height="150dp" />



                <TextView
                    android:id="@+id/hot_projects_company_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="12dp"
                    android:layout_toEndOf="@+id/hot_projects_company_img"
                    android:padding="10dp"
                    android:text="lakshman"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/hot_projects_contact_person_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="lakshman"
                    android:layout_below="@+id/hot_projects_company_name_tv"
                    android:layout_toEndOf="@+id/hot_projects_company_img"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_toEndOf="@+id/hot_projects_company_img"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    >

                    <android.support.v7.widget.CardView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="25dp"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="2dp">

                        <ImageView
                            android:id="@+id/hot_projects_mail_icon"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:tint="@color/google_icons_color"
                            android:src="@drawable/ic_mail_outline" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="50dp"
                        app:cardCornerRadius="2dp"
                        app:cardElevation="2dp">

                        <ImageView
                            android:id="@+id/hot_projects_phone_icon"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:tint="@color/google_icons_color"
                            android:src="@drawable/ic_phone_black_24dp" />
                    </android.support.v7.widget.CardView>

                </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
