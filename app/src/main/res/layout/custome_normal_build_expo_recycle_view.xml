<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/normal_build_expo_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:layout_margin="4dp"
        app:contentPadding="3dp"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:id="@+id/normal_build_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/normal_build_expo_company_img"
                android:layout_width="130dp"
                android:layout_height="150dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/normal_build_expo_company_img"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/normal_build_expo_company_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="lakshman"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/normal_build_expo_contact_person_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="lakshman"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        app:cardElevation="2dp"
                        android:layout_marginLeft="25dp"
                        app:cardCornerRadius="2dp"
                        android:layout_marginBottom="5dp">

                        <ImageView
                            android:id="@+id/normal_build_expo_mail_icon"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:src="@drawable/ic_mail_outline_black_24dp" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        app:cardElevation="2dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginBottom="5dp"
                        app:cardCornerRadius="2dp">

                        <ImageView
                            android:id="@+id/normal_build_expo_phone_icon"
                            android:layout_width="38dp"
                            android:layout_height="38dp"
                            android:src="@drawable/ic_phone_black_24dp" />
                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
